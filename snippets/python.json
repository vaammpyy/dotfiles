	//initialization
	"initialization":{
		"prefix": "imp",
		"body": [
			"import numpy as np",
			"import matplotlib.pyplot as plt",
			"import scipy as sp"]
	},

	//Function
	"function":{
		"prefix": "def",
		"body": [
			"def $1($2):",
		"\t $3",
	"\t return($4)"]
	},

	//For loop
	"For Loop":{
		"prefix": "for",
		"body": [
			"for $1 in range($2):",
		"\t $3"]
	},

	//Plotting
	"Plotting":{
		"prefix": "plt",
		"body": [
			"fig=plt.plot(figsize=($1),facecolor='white')",
			"plt.plot($2)",
			"plt.xlabel($3)",
			"plt.ylabel($4)",
			"plt.legend([$5])",
			"plt.grid(${6:True})",
			"plt.show()"]
	}

}